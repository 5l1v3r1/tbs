<div class="row">
  <%= render 'home/navbarDefault' %>
</div>
<div class="row">
  <div class="col-md-12">
    <ol class="breadcrumb">
      <li><%= link_to 'Anasayfa', root_path %></li>
      <li class="active">Topluluk Yönetim Kurulları</li>
    </ol>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Topluluk Yönetim Kurulları</h3>
      </div>
      <div class="panel-body">
        <p align="right"><%= link_to 'Yeni Topluluk Yönetim Kurulu', new_club_board_of_director_path, class: "btn btn-default" %></p>
        <table class="table table-hover" id="club_board_of_directors_table">
          <thead>
            <tr>
              <th>Topluluk Adı</th>
              <th>Başkan</th>
              <th>Dönem</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @club_board_of_directors.each do |club_board_of_director| %>
            <tr>
              <td><%= link_to club_board_of_director.club_period.club.name, club_board_of_director %></td>
              <td><%= club_board_of_director.president.name_surname %></td>
              <td><%= club_board_of_director.club_period.academic_period.name %></td>
              <td><%= link_to '<i class="fa fa-trash" title="Sil"></i>'.html_safe, club_board_of_director, method: :delete, data: { confirm: 'Yönetim kurulunu silmek istediğinize emin misiniz?' } %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <br>
      </div>      
    </div>
  </div>
</div>
