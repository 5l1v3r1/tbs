<%= simple_form_for(@system_announcement) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :title, label: "Başlık:" %>
    <%= f.input :content, label: "İçerik:" %>
    <%= f.input :is_view, label: "Görünsün mü?" %>
  </div>
  <div class="form-actions">
    <%= f.submit "Kaydet", class: "btn btn-success" %>
  </div>
<% end %>
