<%= simple_form_for(@club) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :club_category_id, collection: ClubCategory.all, label: 'Kategori Seçiniz:',:include_blank => false %>
    <%= f.input :logo, type: :file, label: "Logo:" %>
    <%= f.input :name, label: "Topluluk Adı:" %>
    <%= f.input :short_name, label: "Kısa Adı:"  %>
    <%= f.input :description, label: "Açıklaması:" %>
    <label >Kuruluş Tarihi:   </label>
    <br/> <%= f.text_field :creation_date, id: "club_set_date" %>
  </div>
  <br/>
  <div class="form-actions">
    <%= f.submit 'Kaydet', class: "btn btn-success" %>
  </div>
<% end %>

<script type="text/javascript">
$('#club_set_date').datepicker({
  language: 'tr'
});
</script>
