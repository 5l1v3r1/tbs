<div class="row">
  <%= render 'home/navbarDefault' %>
</div>
<div class="row">
  <div class="col-md-12">
    <ol class="breadcrumb">
      <li><%= link_to 'Anasayfa', root_path %></li>
      <li class="active">Topluluk Denetim Kurulları</li>
    </ol>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Topluluk Denetim Kurulları</h3>
      </div>
      <div class="panel-body">
        <p align="right"><%= link_to 'Yeni Topluluk Denetim Kurulu', new_club_board_of_supervisory_path, class: "btn btn-default" %></p>
        <table class="table table-hover" id="club_board_of_supervisories_table">
          <thead>
            <tr>
              <th>Topluluk Adı</th>
              <th>1. Asil Üye</th>
              <th>2. Asil Üye</th>
              <th>Dönem</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @club_board_of_supervisories.select { |x| x unless x.club_period.blank? }.each do |club_board_of_supervisory| %>
            <tr>
              <td><%= link_to club_board_of_supervisory.club_period.club.name, club_board_of_supervisory %></td>
              <td><%=blank_for_attribute( club_board_of_supervisory.principal_member_first,"name_surname") %></td>
              <td><%= blank_for_attribute(club_board_of_supervisory.principal_member_second,"name_surname") %></td>
              <td><%= club_board_of_supervisory.club_period.academic_period.name %></td>
              <td><%= link_to '<i class="fa fa-trash" title="Sil"></i>'.html_safe, club_board_of_supervisory, method: :delete, data: { confirm: 'Denetim kurulunu silmek istediğinize emin misiniz?' } %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <br>
      </div>
    </div>
  </div>
</div>
