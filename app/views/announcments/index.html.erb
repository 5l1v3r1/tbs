<div class="row">
  <%= render 'home/navbarDefault' %>
</div>
<div class="row">
  <div class="col-md-12">
  <ol class="breadcrumb">
    <li><%= link_to 'Anasayfa', root_path %></li>
    <li class="active">Topluluk Duyuruları</li>
  </ol>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Topluluk Duyuruları</h3>
      </div>
      <div class="panel-body">
<p align="right"><%= link_to 'Yeni Duyuru Oluştur', new_announcment_path, class: 'btn btn-default' %></p>
<table class="table table-hover">
  <thead>
    <tr>
    <%if current_user.admin? %>
      <th>Topluluk</th>
    <% end %>
      <th>Başlık</th>
      <th>Görünür mü?</th>
      <th>Akademik Danışman Onayı</th>
      <th"></th>
    </tr>
  </thead>

  <tbody>
    <% @announcments.each do |announcment| %>
      <tr>
        <%if current_user.admin? %>
          <td><%= announcment.club_period.club.name %></td>
        <% end %>
        <td><%= link_to announcment.title, announcment %></td>
        <td><%= announcment.is_view ? "Evet" : "Hayır" %></td>
        <td><%= announcment.is_advisor_confirmation ? "Onaylandı" : "Onaylanmadı" %></td>
        <td><%= link_to '<i class="fa fa-pencil" title="Düzenle"></i>'.html_safe, edit_announcment_path(announcment), :style=>'margin-right: 20px;' %><%= link_to '<i class="fa fa-trash" title="Sil"></i>'.html_safe, announcment, method: :delete, data: { confirm: 'Duyuruyu silmek istediğinize emin misiniz?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  <br />
  </div>
    </div>
  </div>
</div>
</div>