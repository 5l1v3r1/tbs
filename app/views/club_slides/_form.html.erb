<%= simple_form_for(@club_slide) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
  <%= f.input :club_id, :as => :hidden, :input_html => { :value => current_user.roles_users.find_by(status: :true, role_id: Role.where(role_type_id: RoleType.find_by(name: :advisor))).role.club_id } %>
    <%= f.input :title, label: "Başlık"  %>
    <%= f.input :file, label: "Resim"  %>
  </div>
  <div class="form-actions">
    <%= f.submit "Kaydet", class: "btn btn-success" %>
  </div>
<% end %>
