<div class="row">
  <%= render 'home/navbarDefault' %>
</div>
<div class="row">
  <div class="col-md-12">
    <ol class="breadcrumb">
      <li><%= link_to 'Anasayfa', root_path %></li>
      <li><%= link_to 'Akademik Dönem Tanımları', academic_periods_path %></li>
      <li class="active">Akademik Dönem Tanım Düzenle</li>
    </ol>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Akademik Dönem Tanım Düzenle</h3>
      </div>
      <div class="panel-body">
        <%= simple_form_for(@academic_period) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :name, label: "Adı" %>
          <%= f.input :is_active, label: "Aktif mi?" %>
        </div>
        <div class="form-actions">
          <%= f.submit "Kaydet", class: "btn btn-success" %>
        </div>
        <% end %>
        <br />
        <%= link_to 'Göster', @academic_period, class: "btn btn-success" %> |
        <%= link_to 'Geri', academic_periods_path, class: "btn btn-info" %>
        <br />
      </div>
    </div>
  </div>
</div>
