<div class="row">
  <%= render 'home/navbarDefault' %>
</div>
<div class="row">
  <div class="col-md-12">
    <ol class="breadcrumb">
      <li><%= link_to 'Anasayfa', root_path %></li>
      <li><%= link_to 'Rol Ayarları', roles_path %></li>
      <li class="active">Rol Detay</li>
    </ol>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Rol Detay</h3>
      </div>
      <div class="panel-body">
        <p>
          <strong>Adı:</strong>
          <%= @role.role_type.name %>
        </p>
        <% if @role.role_type.name == "Dekan" %>
        <p>
          <strong>Fakulte:</strong>
          <%= @role.faculty.name %>
        </p>
        <% else %>
        <p>
          <strong>Topluluk:</strong>
          <%= @role.club_period.club.name unless @role.club_period.blank? %>
        </p>
        <p>
          <strong>Topluluk Akademik Dönem:</strong>
          <%= @role.club_period.academic_period.name unless @role.club_period.blank? %>
        </p>
        <% end %>
        <%= link_to 'Düzenle', edit_role_path(@role), class: "btn btn-success" %> |
        <%= link_to 'Geri', :back, class: "btn btn-info" %>
      </div>
    </div>
  </div>
</div>
