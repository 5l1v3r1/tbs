<div class="row">
  <%= render 'home/navbarDefault' %>
</div>
<div class="row">
  <div class="col-md-12">
    <ol class="breadcrumb">
      <li><%= link_to 'Anasayfa', root_path %></li>
      <li class="active">Etkinlik Kategorileri</li>
    </ol>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Etkinlik Kategorileri</h3>
      </div>
      <div class="panel-body">
        <p align="right"><%= link_to 'Yeni Etkinlik Kategorisi Oluştur', new_event_category_path, class: "btn btn-default" %></p>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Adı</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @event_categories.each do |event_category| %>
            <tr>
              <td><%= event_category.name %></td>
              <td><%= link_to '<i class="fa fa-eye" title="Göster"></i>'.html_safe, event_category %></td>
              <td><%= link_to '<i class="fa fa-pencil" title="Düzenle"></i>'.html_safe, edit_event_category_path(event_category) %></td>
              <td><%= link_to '<i class="fa fa-trash" title="Sil"></i>'.html_safe, event_category, method: :delete, data: { confirm: 'Etkinlik kategorisini silmek istediğinize emin misiniz?' } %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <br>
      </div>
    </div>
  </div>
</div>
