<div class="row">
  <%= render 'home/navbarDefault' %>
</div>
<div class="row">
  <div class="col-md-12">
    <ol class="breadcrumb">
      <li><%= link_to 'Anasayfa', root_path %></li>
      <li class="active">Rol Tipleri</li>
    </ol>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Rol Tipleri</h3>
      </div>
      <div class="panel-body">
        <h1>Rol Tipleri</h1>
        <p align="right"><%= link_to 'Yeni Rol Tipi', new_role_type_path, class: 'btn btn-default' %></p>
        <table class="table table-hover">
          <thead>
            <tr>
              <th width="75%">Adı</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @role_types.each do |role_type| %>
            <tr>
              <td><%= role_type.name %></td>
              <td><%= link_to '<i class="fa fa-eye" title="Göster"></i>'.html_safe, role_type %></td>
              <td><%= link_to '<i class="fa fa-pencil" title="Düzenle"></i>'.html_safe, edit_role_type_path(role_type) %></td>
              <td><%= link_to '<i class="fa fa-trash" title="Sil"></i>'.html_safe, role_type, method: :delete, data: { confirm: 'Bu rol tipini silmek istediğinize emin misiniz?' } %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <br />
      </div>
    </div>
  </div>
</div>
